---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout 
  title="Contact - Headen Tech Solutions"
  description="Contact Headen Tech Solutions for federal AI, data, and geospatial consulting services. Secure Azure Government solutions."
>
  <Header />
  
  <main id="main-content">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-800 to-primary-900 text-white py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
          <p class="text-xl text-primary-100 max-w-4xl mx-auto leading-relaxed">
            Ready to discuss your federal AI and data needs? Get in touch with our team.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <ContactForm />

    <!-- Additional Contact Information -->
    <section class="py-16 bg-neutral-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-semibold text-neutral-900 mb-4">Other Ways to Connect</h2>
          <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
            Multiple ways to reach our federal consulting team.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-2xl p-8 shadow-card border border-neutral-200 text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-4">Email</h3>
            <p class="text-neutral-700 mb-4">Direct email for immediate assistance</p>
            <a 
              href="mailto:consulting@headentechsolutions.com"
              class="text-primary-600 hover:text-primary-800 font-semibold focus:outline-none focus:ring-2 focus:ring-primary-500 rounded"
            >
              consulting@headentechsolutions.com
            </a>
          </div>

          <div class="bg-white rounded-2xl p-8 shadow-card border border-neutral-200 text-center">
            <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-accent-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-4">Secure Portal</h3>
            <p class="text-neutral-700 mb-4">Access our Azure Government environment</p>
            <a 
              href="https://portal.headentechsolutions.com"
              target="_blank"
              rel="noopener noreferrer"
              class="text-accent-600 hover:text-accent-800 font-semibold focus:outline-none focus:ring-2 focus:ring-accent-500 rounded"
            >
              Launch Secure Portal
            </a>
          </div>

          <div class="bg-white rounded-2xl p-8 shadow-card border border-neutral-200 text-center">
            <div class="w-16 h-16 bg-status-success bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-status-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-neutral-900 mb-4">Response Time</h3>
            <p class="text-neutral-700 mb-4">We typically respond within 24 hours</p>
            <p class="text-status-success font-semibold">24 Hours</p>
          </div>
        </div>
      </div>
    </section>

    <!-- What to Expect -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-semibold text-neutral-900 mb-4">What to Expect</h2>
          <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
            Our process for engaging with federal agencies.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary-600">1</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Initial Contact</h3>
            <p class="text-neutral-700 text-sm">We'll respond within 24 hours to discuss your needs</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary-600">2</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Discovery Call</h3>
            <p class="text-neutral-700 text-sm">Understand your mission requirements and constraints</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary-600">3</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Solution Design</h3>
            <p class="text-neutral-700 text-sm">Develop a tailored approach within Azure Government</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary-600">4</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">Proposal</h3>
            <p class="text-neutral-700 text-sm">Present detailed proposal with timeline and costs</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Notice -->
    <section class="py-16 bg-primary-100">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl p-8 shadow-card border border-primary-300">
          <div class="flex items-start">
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-primary-800 mb-2">Security Notice</h3>
              <p class="text-primary-700">
                All sensitive communications and data processing occur within our Azure Government environment. 
                This public website is for informational purposes only and does not handle classified or 
                sensitive government information.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
