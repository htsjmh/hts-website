---
// Feature list component for capabilities
export interface Props {
  title: string;
  features: string[];
}

const { title, features } = Astro.props;
---

<section class="py-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-semibold text-neutral-900 text-center mb-12">{title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature, index) => (
        <div class="bg-white rounded-2xl p-6 shadow-card hover:shadow-md transition-shadow duration-200 border border-neutral-200">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900">Capability {index + 1}</h3>
          </div>
          <p class="text-neutral-700 leading-relaxed">{feature}</p>
        </div>
      ))}
    </div>
  </div>
</section>
