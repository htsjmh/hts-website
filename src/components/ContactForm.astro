---
// Contact form component with disabled submit and Azure Gov integration note
---

<section class="py-16 bg-neutral-100">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-semibold text-neutral-900 mb-4">Contact Headen Tech Solutions</h2>
      <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
        Ready to discuss your federal AI and data needs? Get in touch with our team.
      </p>
    </div>

    <div class="bg-white rounded-2xl shadow-card p-8 md:p-12">
      <form class="space-y-6" aria-label="Contact form">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Name Field -->
          <div>
            <label for="name" class="block text-sm font-semibold text-neutral-900 mb-2">
              Full Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              placeholder="Enter your full name"
              aria-describedby="name-error"
            />
            <div id="name-error" class="text-status-error text-sm mt-1 hidden" role="alert"></div>
          </div>

          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-semibold text-neutral-900 mb-2">
              Work Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              placeholder="your.email@agency.gov"
              aria-describedby="email-error"
            />
            <div id="email-error" class="text-status-error text-sm mt-1 hidden" role="alert"></div>
          </div>
        </div>

        <!-- Organization Field -->
        <div>
          <label for="organization" class="block text-sm font-semibold text-neutral-900 mb-2">
            Organization *
          </label>
          <input
            type="text"
            id="organization"
            name="organization"
            required
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
            placeholder="Federal agency or organization name"
            aria-describedby="organization-error"
          />
          <div id="organization-error" class="text-status-error text-sm mt-1 hidden" role="alert"></div>
        </div>

        <!-- Message Field -->
        <div>
          <label for="message" class="block text-sm font-semibold text-neutral-900 mb-2">
            Message *
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-vertical"
            placeholder="Tell us about your AI, data, or geospatial needs..."
            aria-describedby="message-error"
          ></textarea>
          <div id="message-error" class="text-status-error text-sm mt-1 hidden" role="alert"></div>
        </div>

        <!-- Submit Button (Disabled) -->
        <div class="pt-4">
          <button
            type="submit"
            disabled
            class="w-full bg-neutral-400 text-neutral-600 px-8 py-4 rounded-lg text-lg font-semibold cursor-not-allowed"
            aria-describedby="submit-note"
          >
            Send Message (Coming Soon)
          </button>
          
          <!-- Integration Note -->
          <div id="submit-note" class="mt-4 p-4 bg-primary-100 border border-primary-300 rounded-lg">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-primary-600 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="text-sm font-semibold text-primary-800 mb-1">Form Integration in Progress</h3>
                <p class="text-sm text-primary-700">
                  When enabled, this form will securely route to our Azure Government environment. 
                  For immediate assistance, please email 
                  <a href="mailto:consulting@headentechsolutions.com" class="text-primary-600 hover:text-primary-800 underline focus:outline-none focus:ring-2 focus:ring-primary-500 rounded">
                    consulting@headentechsolutions.com
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
  // Form validation (client-side only, no submission)
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const inputs = form.querySelectorAll('input, textarea');
    
    function validateField(field) {
      const value = field.value.trim();
      const errorElement = document.getElementById(field.name + '-error');
      
      if (field.hasAttribute('required') && !value) {
        field.classList.add('border-status-error');
        field.classList.remove('border-neutral-300');
        errorElement.textContent = `${field.labels[0].textContent.replace(' *', '')} is required`;
        errorElement.classList.remove('hidden');
        return false;
      } else {
        field.classList.remove('border-status-error');
        field.classList.add('border-neutral-300');
        errorElement.classList.add('hidden');
        return true;
      }
    }
    
    inputs.forEach(input => {
      input.addEventListener('blur', () => validateField(input));
      input.addEventListener('input', () => {
        if (input.classList.contains('border-status-error')) {
          validateField(input);
        }
      });
    });
    
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      let isValid = true;
      inputs.forEach(input => {
        if (!validateField(input)) {
          isValid = false;
        }
      });
      
      if (isValid) {
        // Form is valid but submission is disabled
        console.log('Form validation passed, but submission is disabled');
      }
    });
  });
</script>
